.signup
  .signup__title
    signup
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .signup__box
      .signup__box__field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "input_field"
      .signup__box__field
        = f.label :name
        %br
        = f.text_field :name, class: "input_field"
      .signup__box__field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length}文字以上)
        %br/
        = f.password_field :password, autocomplete: "new-password", class: "input_field"
      .signup__box__field
        = f.label :password_confirmation, class: "label"
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "input_field"
      .signup__box__actions
        = f.button :type => "submit", class: "signup__box__actions__submit" do
          = icon('fas','user-plus')
          signup
      = render "devise/shared/links"