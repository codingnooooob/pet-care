.edit_left
  .edit_left__title
    edit
  = form_for @animal, url: animal_path(params[:id]), method: :patch do |f|
    .edit_left__box
      .edit_left__box__field
        Name
        %br
        = f.text_field :name, class: "edit_left__box__field__input"
        .edit_left__box__field__image
          %label{:for => "image2"}
            = icon('fas','image', class: "edit_left__box__field__image__icon")
          = f.file_field :image, class: "edit_left__box__field__image__input", id: "image2"
      .edit_left__box__textarea
        Memo
        %br
        = f.text_area :text, class: "edit_left__box__textarea__input"
      .edit_left__box__edit
        = f.button :type => "submit", class: "edit_left__box__edit__submit" do
          = icon('fas','edit')
          edit